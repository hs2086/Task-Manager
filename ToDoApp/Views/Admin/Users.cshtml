@model ToDoApp.ViewModel.BigUserVM
@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Management</h2>
        <a asp-action="CreateUser" asp-controller="Admin" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New User
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge bg-secondary">@user.Role</span>
                            </td>
                            <td>
                                @if (user.IsBlocked)
                                {
                                    <span class="badge bg-danger">Blocked until @user.BlockedUntil?.ToString("MMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <!-- Add Role Button -->
                                    <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#roleModal-@user.Id">
                                        <i class="bi bi-person-plus"></i> Add Role
                                    </button>
                                    
                                    <form asp-action="BlockUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm @(user.IsBlocked ? "btn-outline-success" : "btn-outline-warning")" 
                                                onclick="return confirm('@(user.IsBlocked ? "Unblock this user?" : "Block this user for 1 month?")')">
                                            <i class="bi @(user.IsBlocked ? "bi-unlock" : "bi-lock")"></i> 
                                            @(user.IsBlocked ? "Unblock" : "Block for Month")
                                        </button>
                                    </form>
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Are you sure you want to delete this user?')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                                
                                <!-- Role Assignment Modal -->
                                <div class="modal fade" id="roleModal-@user.Id" tabindex="-1" aria-labelledby="roleModalLabel-@user.Id" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="roleModalLabel-@user.Id">Assign Role to @user.Name</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <form asp-action="AssignRoleFromUsers" asp-controller="Admin" method="post">
                                                <div class="modal-body">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <div class="mb-3">
                                                        <label class="form-label">Select Role</label>
                                                        <select name="roleName" class="form-select">
                                                            <option value="@user.Role">Select Role</option>
                                                            @foreach(string rolename in Model.Roles){
                                                                <option value="@rolename">@rolename</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .badge {
            font-size: 0.9em;
            padding: 5px 10px;
        }
        .table th {
            font-weight: 600;
        }
        .btn-group .btn {
            margin-right: 5px;
        }
    </style>
}
