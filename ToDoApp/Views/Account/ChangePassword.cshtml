@model ToDoApp.Models.ChangePassword

<!-- Add Font Awesome CSS if not already in your layout -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="password-change-container">
    <div class="password-change-card">
        <h2 class="password-change-title">
            <i class="fas fa-key"></i> Change Password
        </h2>
        
        @if (Model.Step == 1)
        {
            <form asp-action="ChangePassword" method="post" class="password-change-form">
                <input type="hidden" asp-for="Step" value="1" />
                
                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group password-input-group">
                    <label asp-for="CurrentPassword" class="form-label"></label>
                    <div class="input-with-toggle">
                        <input asp-for="CurrentPassword" type="password" class="form-control password-input" />
                        <button type="button" class="password-toggle"><i class="fas fa-eye"></i></button>
                    </div>
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                
                <div class="form-group password-input-group">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <div class="input-with-toggle">
                        <input asp-for="NewPassword" type="password" class="form-control password-input" />
                        <button type="button" class="password-toggle"><i class="fas fa-eye"></i></button>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <small class="form-text text-muted">Minimum 8 characters</small>
                </div>
                
                <div class="form-group password-input-group">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="input-with-toggle">
                        <input asp-for="ConfirmPassword" type="password" class="form-control password-input" />
                        <button type="button" class="password-toggle"><i class="fas fa-eye"></i></button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-envelope"></i> Send Verification Code
                    </button>
                    <a asp-action="Profile" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        }
        else if (Model.Step == 2)
        {
            <form asp-action="ChangePassword" method="post" class="password-change-form">
                <input type="hidden" asp-for="Step" value="2" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="CurrentPassword" />
                <input type="hidden" asp-for="NewPassword" />
                <input type="hidden" asp-for="ConfirmPassword" />
                
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> We've sent a verification code to your email.
                </div>
                
                <div class="form-group">
                    <label asp-for="VerificationCode" class="form-label">Verification Code</label>
                    <input asp-for="VerificationCode" class="form-control" />
                    <span asp-validation-for="VerificationCode" class="text-danger"></span>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check-circle"></i> Verify and Change Password
                    </button>
                    <button type="submit" name="resendCode" value="true" class="btn btn-outline-info">
                        <i class="fas fa-redo"></i> Resend Code
                    </button>
                </div>
            </form>
        }
    </div>
</div>

<style>
    .password-change-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 20px;
        background-color: #f8f9fa;
    }
    
    .password-change-card {
        width: 100%;
        max-width: 500px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }
    
    .password-change-title {
        text-align: center;
        margin-bottom: 30px;
        color: #2c3e50;
    }
    
    .password-change-title i {
        margin-right: 10px;
    }
    
    .password-change-form .form-group {
        margin-bottom: 20px;
    }
    
    .password-change-form .form-label {
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
        color: #495057;
    }
    
    .password-change-form .form-control {
        padding: 12px 15px;
        border-radius: 6px;
        border: 1px solid #ced4da;
        transition: border-color 0.15s ease-in-out;
        width: 100%;
    }
    
    .password-change-form .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        outline: none;
    }
    
    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }
    
    .btn {
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }
    
    .btn-primary:hover {
        background-color: #0069d9;
        border-color: #0062cc;
    }
    
    .btn-outline-secondary {
        border: 1px solid #6c757d;
        color: #6c757d;
        background-color: transparent;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    .alert-info {
        background-color: #e7f5ff;
        border-color: #d0ebff;
        color: #1864ab;
        padding: 12px 15px;
        border-radius: 6px;
        margin-bottom: 20px;
    }
    
    .form-text {
        font-size: 0.85rem;
        color: #6c757d;
    }
    
    /* Password toggle styles */
    .password-input-group {
        position: relative;
    }
    
    .input-with-toggle {
        position: relative;
        display: flex;
    }
    
    .password-toggle {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #6c757d;
        z-index: 5;
        background: none;
        border: none;
        padding: 0;
        font-size: 1rem;
    }
    
    .password-toggle:hover {
        color: #495057;
    }
    
    .password-toggle i {
        pointer-events: none; /* Prevent icon from interfering with button click */
    }
    
    @@media (max-width: 576px) {
        .password-change-card {
            padding: 20px;
        }
        
        .form-actions {
            flex-direction: column;
            gap: 10px;
        }
        
        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get all password toggle buttons
        const toggleButtons = document.querySelectorAll('.password-toggle');
        
        toggleButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Find the associated password input
                const input = this.parentElement.querySelector('.password-input');
                const icon = this.querySelector('i');
                
                // Toggle the input type
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        });
    });
</script>