@model List<ToDoApp.ViewModel.RoleDisplay>
@{
    ViewData["Title"] = "Role Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Role Management</h2>
        <a asp-action="AddRole" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Role
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Role Name</th>
                            <th>Role ID</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="@(role.Name == "Admin" ? "bg-success" : "bg-primary") bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="bi @(role.Name == "Admin" ? "bi-shield-shaded" : "bi-shield") text-@(role.Name == "Admin" ? "success" : "primary")"></i>
                                        </div>
                                        <span>@role.Name</span>
                                    </div>
                                </td>
                                <td>@role.Id</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @if (role.Name != "Admin")
                                        {
                                            <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Are you sure you want to delete the role: @role.Name?')">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-secondary" disabled>
                                                <i class="bi bi-pencil"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary" disabled>
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    No roles found. Create your first role.
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .badge {
            font-size: 0.9em;
            padding: 5px 10px;
        }
        .table th {
            font-weight: 600;
        }
        .btn-group .btn {
            margin-right: 5px;
        }
        .card {
            border-radius: 8px;
        }
        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.02);
        }
        .bg-opacity-10 {
            opacity: 0.1;
        }
    </style>
}